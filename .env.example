# Frontend Environment Variables
# Copy this file to .env for local development

# API endpoint for local development
VITE_API_URL=http://localhost:8787

# Database (for local SQLite)
DATABASE_PATH=./data.sqlite

# JWT Secret (for local development only - use wrangler secrets for production)
JWT_SECRET=your-dev-jwt-secret-here-change-in-production

# Environment
NODE_ENV=development

# Cloudflare Environment Detection
# These are automatically set by Cloudflare in production
# CF_PAGES_BRANCH=main
# CF_PAGES_COMMIT_SHA=abcdef123456
# CF_PAGES_URL=https://todo-app.pages.dev